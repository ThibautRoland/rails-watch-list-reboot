<div class="container">
  <h1 class="text-center">Here are your lists:</h1>
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <div class="card my-2 p-3">
          <% if list.photo.attached? %>
            <%= cl_image_tag list.photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
          <p><%= list.name %></p>
        </div>
      <% end %>
    <% end %>
  <%= link_to "Create a list", new_list_path, :class => "btn btn-light" %>
</div>
